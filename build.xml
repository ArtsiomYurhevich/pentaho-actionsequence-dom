<!-- ======================================================================
     description: main build file for pentaho  . .                                                    
     ====================================================================== -->
<project name="pentaho-actionsequence-dom" default="compile">
	<description>Pentaho BI Platform build process..</description>

	<property file="build.properties" />
	<property file="version.properties" />

	<path id="classpath">
		<fileset dir="lib">
			<include name="**/*.jar" />
			<include name="**/*.zip" />
		</fileset>
	</path>

	<!-- ===================================================================
        target: clean              
       =================================================================== -->
	<target name="clean" depends="">
		<delete dir="bin" />
		<delete dir="dist" />
	</target>


	<!-- ===================================================================
        target: init              
       =================================================================== -->
	<target name="init">
		<mkdir dir="bin" />
		<mkdir dir="dist" />
		<copy todir="bin">
		  <fileset dir="src" includes="**/*.properties"/>
		  <fileset dir="src" includes="**/*.gif"/>
		</copy>
	</target>

	<target name="compile" depends="init">
		<javac destdir="bin" debug="${debug}" optimize="${optimize}" deprecation="${deprecation}" compiler="modern" source="1.4" target="1.4" fork="true">
			<src path="src" />
			<classpath refid="classpath" />
		</javac>
	</target>
	
	<target name="dist" depends="compile">
		<jar basedir="bin" destfile="dist/pentaho-actionsequence-dom-${release.major.number}.${release.minor.number}.${release.milestone.number}.jar" />
	</target>
	
	
</project>
